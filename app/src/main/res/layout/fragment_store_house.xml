<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StoreHouseFragment"
    android:background="#179589">


    <ImageView
        android:id="@+id/iw_storehouse_svg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/storehouse_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/cw_sh"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cw_sh"
        android:layout_width="wrap_content"
        android:layout_height="514dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="#000000"
        app:cardBackgroundColor="#DF7A5B"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iw_storehouse_svg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_storehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kollektif_bold"
                android:text="Store House"
                android:textAlignment="center"
                android:textColor="#07574F"
                android:textSize="30dp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh1"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/sh1_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_sh1"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity:1000"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh1_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="25.000$"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh1"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh2"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="15dp"
                            android:src="@drawable/sh2_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity: 2500"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh2_valur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="100.000 $"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh2"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh3"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:src="@drawable/sh3_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity: 10.000"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh3_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="200.000"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh3"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh4"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:padding="7dp"
                            android:src="@drawable/sh4_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity: 50.00"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh4_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/kollektif"
                            android:text="500.000 $"
                            android:textColor="#D6D6D6"
                            android:textSize="18dp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh4"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>