<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StoreHouseFragment"
    android:background="#179589">


    <ImageView
        android:id="@+id/iw_storehouse_svg"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/storehouse_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cw_sh"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cw_sh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:background="#000000"
        app:cardBackgroundColor="#DF7A5B"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iw_storehouse_svg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_storehouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:fontFamily="@font/kollektif_bold"
                android:text="Store House"
                android:textAlignment="center"
                android:textColor="#07574F"
                android:textSize="@dimen/_20sdp">

            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh1"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:padding="@dimen/_8sdp"
                            android:src="@drawable/sh1_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_sh1"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity:500"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh1_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="25.000$"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh1"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh2"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:src="@drawable/sh2_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_sh1"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity:2500"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh2_valur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="100.000$"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh2"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh3"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:src="@drawable/sh3_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_sh1"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity:7500"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh3_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="250.000$"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh3"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cw_sh4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="#000000"
                    app:cardBackgroundColor="#47874A"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@id/cw_sh4"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:src="@drawable/sh4_svg">

                        </ImageView>

                        <TextView
                            android:id="@+id/tw_sh4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_sh1"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="Capacity:15000"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/tw_sh4_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@id/cw_worker_apprentice"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:fontFamily="@font/kollektif"
                            android:text="500.000$"
                            android:textColor="#D6D6D6"
                            android:textSize="@dimen/_14sdp">

                        </TextView>

                        <Button
                            android:id="@+id/btn_sh4"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@drawable/custom_button2"
                            android:text="Buy">

                        </Button>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>