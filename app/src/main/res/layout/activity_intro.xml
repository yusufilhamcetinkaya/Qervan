<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#010130">

    <ImageView
        android:id="@+id/helloicon"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:src="@drawable/helloicon"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </ImageView>

    <TextView
        android:id="@+id/tw_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Hello Boss! Welcome to your new factory.Lets begin with your factor's name."
        android:textColor="@color/white"
        android:fontFamily="@font/kollektif_italic"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@id/helloicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_marginTop="24dp">
    </TextView>
    <EditText
        android:id="@+id/et_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Factory Name"
        android:textColorHint="#A8A8A8"
        app:layout_constraintTop_toBottomOf="@id/tw_intro"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
    </EditText>

    <Button
        android:id="@+id/btn_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Save"
        android:background="@drawable/custom_button"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/et_intro"
        android:layout_marginTop="32dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>