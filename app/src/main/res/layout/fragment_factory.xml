<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FactoryFragment"
    android:background="#179589">


    <ImageView
        android:id="@+id/iw_factory_svg"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/storehouse_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cw_factory" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cw_factory"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_24sdp"
      android:layout_marginTop="@dimen/_4sdp"
      android:layout_marginEnd="@dimen/_24sdp"
      android:layout_marginBottom="@dimen/_24sdp"
      android:background="#000000"
      app:cardBackgroundColor="#DF7A5B"
      app:cardCornerRadius="@dimen/_8sdp"
      app:cardElevation="@dimen/_4sdp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iw_factory_svg">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/text_factory"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_4sdp"
              android:fontFamily="@font/kollektif_bold"
              android:text="Factory"
              android:textAlignment="center"
              android:textColor="#07574F"
              android:textSize="@dimen/_20sdp">

          </TextView>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_8sdp"
              android:layout_marginTop="@dimen/_4sdp"
              android:layout_marginEnd="@dimen/_12sdp"
              android:orientation="horizontal"
              android:layout_gravity="center_horizontal"
              android:gravity="center_vertical">
              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_worker_apprentice"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:layout_marginTop="@dimen/_4sdp"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_gravity="start"
                  android:layout_marginBottom="@dimen/_4sdp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="@dimen/_8sdp"
                  app:cardElevation="@dimen/_4sdp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_worker_apprentice"
                          android:layout_width="@dimen/_75sdp"
                          android:layout_height="@dimen/_60sdp"
                          android:layout_gravity="center"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_2sdp"
                          android:padding="@dimen/_8sdp"
                          android:src="@drawable/apprentice_svg">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_apprentice"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_sh1"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Apprentice"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_16sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_apprentice_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="5.000$"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_14sdp">

                      </TextView>

                      <TextView
                          android:id="@+id/tw_apprentice_rate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Rate 10/sec."
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_12sdp">

                      </TextView>


                      <Button
                          android:id="@+id/btn_apprentice"
                          android:layout_width="@dimen/_90sdp"
                          android:layout_height="@dimen/_24sdp"
                          android:layout_gravity="center"
                          android:layout_marginTop="7dp"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_8sdp"
                          android:background="@drawable/custom_button2"
                          android:text="Hire">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_worker"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:layout_marginTop="@dimen/_8sdp"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_gravity="end"
                  android:layout_marginBottom="@dimen/_4sdp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="@dimen/_8sdp"
                  app:cardElevation="@dimen/_4sdp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_worker"
                          android:layout_width="@dimen/_75sdp"
                          android:layout_height="@dimen/_60sdp"
                          android:layout_gravity="center"
                          android:padding="10dp"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_2sdp"
                          android:src="@drawable/worker_svg">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_worker"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_sh1"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Worker"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_16sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_worker_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="20.000$"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_14sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_worker_rate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Rate 50/sec."
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_12sdp">

                      </TextView>

                      <Button
                          android:id="@+id/btn_worker"
                          android:layout_width="@dimen/_90sdp"
                          android:layout_height="@dimen/_24sdp"
                          android:layout_gravity="center"
                          android:layout_marginTop="7dp"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_8sdp"
                          android:background="@drawable/custom_button2"
                          android:text="Hire">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_8sdp"
              android:layout_marginTop="@dimen/_4sdp"
              android:layout_marginEnd="@dimen/_12sdp"
              android:orientation="horizontal"
              android:layout_gravity="center_horizontal"
              android:gravity="center_vertical">
              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_manager"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:layout_marginTop="@dimen/_4sdp"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_gravity="start"
                  android:layout_marginBottom="@dimen/_4sdp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="@dimen/_8sdp"
                  app:cardElevation="@dimen/_4sdp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_manager"
                          android:layout_width="@dimen/_75sdp"
                          android:layout_height="@dimen/_60sdp"
                          android:layout_gravity="center"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_2sdp"
                          android:padding="@dimen/_8sdp"
                          android:src="@drawable/manager_svg">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_manager"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_sh1"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Manager"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_16sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_Manager_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="100.000$"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_14sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_manager_rate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Rate 300/sec."
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_12sdp">

                      </TextView>

                      <Button
                          android:id="@+id/btn_manager"
                          android:layout_width="@dimen/_90sdp"
                          android:layout_height="@dimen/_24sdp"
                          android:layout_gravity="center"
                          android:layout_marginTop="7dp"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_8sdp"
                          android:background="@drawable/custom_button2"
                          android:text="Hire">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_ceo"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_marginStart="@dimen/_4sdp"
                  android:layout_marginTop="@dimen/_4sdp"
                  android:layout_marginEnd="@dimen/_4sdp"
                  android:layout_gravity="start"
                  android:layout_marginBottom="@dimen/_4sdp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="@dimen/_8sdp"
                  app:cardElevation="@dimen/_4sdp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_ceo"
                          android:layout_width="@dimen/_75sdp"
                          android:layout_height="@dimen/_60sdp"
                          android:layout_gravity="center"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_2sdp"
                          android:padding="@dimen/_8sdp"
                          android:src="@drawable/ceo_svg">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_ceo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_sh1"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:layout_marginStart="@dimen/_8sdp"
                          android:layout_marginEnd="@dimen/_8sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Ceo"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_16sdp">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_ceo_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="250.000$"
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_14sdp">

                      </TextView>

                      <TextView
                          android:id="@+id/tw_ceo_rate"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginTop="@dimen/_4sdp"
                          android:fontFamily="@font/kollektif"
                          android:text="Rate 1000/sec."
                          android:textColor="#D6D6D6"
                          android:textSize="@dimen/_12sdp">

                      </TextView>

                      <Button
                          android:id="@+id/btn_ceo"
                          android:layout_width="@dimen/_90sdp"
                          android:layout_height="@dimen/_24sdp"
                          android:layout_gravity="center"
                          android:layout_marginTop="7dp"
                          android:layout_marginStart="@dimen/_4sdp"
                          android:layout_marginEnd="@dimen/_4sdp"
                          android:layout_marginBottom="@dimen/_8sdp"
                          android:background="@drawable/custom_button2"
                          android:text="Hire">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>
          </LinearLayout>

      </LinearLayout>

  </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>