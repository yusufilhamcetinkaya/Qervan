<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FactoryFragment"
    android:background="#179589">


    <ImageView
        android:id="@+id/iw_factory_svg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/factory_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <androidx.cardview.widget.CardView
      android:id="@+id/cw_factory"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="30dp"
      android:background="#000000"
      app:cardBackgroundColor="#DF7A5B"
      app:cardCornerRadius="10dp"
      app:cardElevation="5dp"
      app:layout_constraintTop_toBottomOf="@id/iw_factory_svg"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/text_factory"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/kollektif_bold"
              android:text="Factory"
              android:textColor="#006505"
              android:textAlignment="center"
              android:textSize="30dp"
              android:layout_marginTop="10dp">

          </TextView>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:layout_marginTop="10dp">
              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_worker_apprentice"
                  android:layout_width="160dp"
                  android:layout_height="200dp"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="10dp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="5dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_worker_apprentice"
                          android:layout_width="100dp"
                          android:layout_height="100dp"
                          android:layout_gravity="center"
                          android:src="@drawable/apprentice_svg">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_apprentice"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="Apprentice"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_apprentice_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="10.000 $"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>

                      <Button
                          android:id="@+id/btn_apprentice"
                          android:layout_width="120dp"
                          android:layout_height="35dp"
                          android:layout_marginTop="7dp"
                          android:layout_gravity="center"
                          android:background="@drawable/custom_button2"
                          android:text="Hıre">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_worker"
                  android:layout_width="160dp"
                  android:layout_height="200dp"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="10dp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="5dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_worker"
                          android:layout_width="100dp"
                          android:layout_height="100dp"
                          android:layout_gravity="center"
                          android:src="@drawable/worker_svg"
                          android:padding="15dp">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_worker"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="Worker"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_worker_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="25.000 $"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>

                      <Button
                          android:id="@+id/btn_worker"
                          android:layout_width="120dp"
                          android:layout_height="35dp"
                          android:layout_marginTop="7dp"
                          android:layout_gravity="center"
                          android:background="@drawable/custom_button2"
                          android:text="Hıre">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>
          </LinearLayout>

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="15dp"
              android:layout_marginEnd="15dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp">
              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_manager"
                  android:layout_width="160dp"
                  android:layout_height="200dp"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="10dp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="5dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_manager"
                          android:layout_width="100dp"
                          android:layout_height="100dp"
                          android:layout_gravity="center"
                          android:src="@drawable/manager_svg"
                          android:padding="12dp">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_manager"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="Manager"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_Manager_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="50.000 $"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>

                      <Button
                          android:id="@+id/btn_manager"
                          android:layout_width="120dp"
                          android:layout_height="35dp"
                          android:layout_marginTop="7dp"
                          android:layout_gravity="center"
                          android:background="@drawable/custom_button2"
                          android:text="Hıre">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>

              <androidx.cardview.widget.CardView
                  android:id="@+id/cw_ceo"
                  android:layout_width="160dp"
                  android:layout_height="200dp"
                  android:layout_marginStart="5dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginBottom="10dp"
                  android:background="#000000"
                  app:cardBackgroundColor="#47874A"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="5dp">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


                      <ImageView
                          android:id="@id/cw_ceo"
                          android:layout_width="100dp"
                          android:layout_height="100dp"
                          android:layout_gravity="center"
                          android:src="@drawable/ceo_svg"
                          android:padding="7dp">

                      </ImageView>

                      <TextView
                          android:id="@+id/tw_ceo"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="Ceo"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>
                      <TextView
                          android:id="@+id/tw_ceo_cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignStart="@id/cw_worker_apprentice"
                          android:layout_gravity="center"
                          android:layout_marginTop="5dp"
                          android:fontFamily="@font/kollektif"
                          android:text="100.000 $"
                          android:textSize="18dp"
                          android:textColor="#D6D6D6">

                      </TextView>

                      <Button
                          android:id="@+id/btn_ceo"
                          android:layout_width="120dp"
                          android:layout_height="35dp"
                          android:layout_marginTop="7dp"
                          android:layout_gravity="center"
                          android:background="@drawable/custom_button2"
                          android:text="Hıre">

                      </Button>
                  </LinearLayout>

              </androidx.cardview.widget.CardView>
          </LinearLayout>

      </LinearLayout>

  </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>