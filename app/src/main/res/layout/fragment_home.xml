<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#179589"
    tools:context=".fragments.HomeFragment">

    <ImageView
        android:id="@+id/iw_home_svg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/home_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FactoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Factory Name"
        android:textSize="26dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:fontFamily="@font/kollektif_bold"
        app:layout_constraintTop_toBottomOf="@id/iw_home_svg"
        app:layout_constraintBottom_toTopOf="@id/cw_home"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cw_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="#000000"
        app:cardBackgroundColor="#CD564D"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/FactoryName"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
            android:id="@+id/tw_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:fontFamily="@font/kollektif_bold">

        </TextView>


            <TextView
                android:id="@+id/tw_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Money:55.000 $"
                android:textSize="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/kollektif"/>
            <TextView
                android:id="@+id/tw_urun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Urun: 20.000"
                android:textSize="24dp"
                android:fontFamily="@font/kollektif"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tw_hamMadde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ham Madde: 1500"
                android:textSize="24dp"
                android:fontFamily="@font/kollektif"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tw_seviye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seviye:  3"
                android:textSize="24dp"
                android:fontFamily="@font/kollektif"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/cw_home"
        app:cardBackgroundColor="#CD564D"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/tw_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/kollektif"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:text="You can get earn 10.000$ for each ad.">

        </TextView>
            <TextView
                android:id="@+id/tw_ad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:fontFamily="@font/kollektif_italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:text="Only 1 ad you can watch in 5 min.">

            </TextView>
        <Button
            android:id="@+id/btn_ad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:text="Watch Ad"
            android:background="@drawable/custom_button2">

        </Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>